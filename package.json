{
  "name": "opay-message-tool",
  "productName": "opay-message-tool",
  "version": "1.0.3",
  "description": "A convenient tool to view the O'Pay messages in the streaming.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Yuuta Tsubasa",
    "email": "yuuta.tsubasa.knight@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "YuutaTsubasa",
              "name": "opay-message-tool"
            }
          }
        }
      ]
    }
  },
  "build": {
    "asar": true
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "rxjs": "^7.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.60",
    "@electron-forge/maker-deb": "^6.0.0-beta.60",
    "@electron-forge/maker-rpm": "^6.0.0-beta.60",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.60",
    "@electron-forge/maker-zip": "^6.0.0-beta.60",
    "@electron-forge/publisher-github": "^6.0.0-beta.60",
    "electron": "14.0.0"
  }
}
